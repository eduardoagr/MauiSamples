<ContentPage
    x:Class="FireChat.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:FireChat.ViewModels"
    Title="WelcomePage"
    x:DataType="vm:WelcomePageViewModel">

    <skia:SKLottieView
        AnimationCompleted="SKLottieView_AnimationCompleted"
        Source="wait.json">
        <skia:SKLottieView.Behaviors>
            <toolkit:EventToCommandBehavior
                Command="{Binding CheckAuthCommand}"
                EventName="AnimationCompleted" />
        </skia:SKLottieView.Behaviors>

    </skia:SKLottieView>

</ContentPage>