<ContentView
    x:Class="FireChat.Controls.MaterialEntry"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FireChat.Controls"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    x:DataType="controls:MaterialEntry">

    <inputLayout:SfTextInputLayout
        Hint="{Binding Hint}"
        ShowLeadingView="True"
        Style="{StaticResource RegisterSfTextInputLayoutStyle}">
        <inputLayout:SfTextInputLayout.LeadingView>
            <Label
                FontFamily="MaterialSymbol"
                FontSize="Medium"
                Text="{Binding Icon}"
                TextColor="{Binding IconColor}" />
        </inputLayout:SfTextInputLayout.LeadingView>
        <Entry
            IsPassword="{Binding IsPassword}"
            Text="{Binding Text}"
            TextColor="{Binding TextColor}" />
    </inputLayout:SfTextInputLayout>
</ContentView>
